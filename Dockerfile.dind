FROM docker:dind

# Install dependencies
RUN apk add --no-cache \
    bash \
    curl \
    git \
    make


# Set Go environment
RUN curl -o https://go.dev/dl/go1.25.1.linux-arm64.tar.gz
RUN rm -rf /usr/local/go && tar -C /usr/local -xzf go1.25.1.linux-arm64.tar.gz
ENV GOPATH=/go
ENV PATH=$GOPATH/bin:/usr/local/go/bin:$PATH

# Create workspace
WORKDIR /workspace

# Copy project files
COPY . .

# Build ORAS
RUN make

# Expose Docker daemon port
EXPOSE 2376

# Start Docker daemon and keep container running
CMD ["dockerd", "--host=unix:///var/run/docker.sock", "--host=tcp://0.0.0.0:2376"]